# =============================================================================
# IAC-Ansible: Status Monitor Configuration
# Managed by Ansible - credentials from Ansible Vault
# =============================================================================
# This file is NOT stored in git. Credentials come from vault-encrypted vars.
# File permissions: 0600 (root only)

# Provider: uptime-kuma (drop-in providers in /usr/local/lib/iac-ansible/providers/)
STATUS_MONITOR_PROVIDER="{{ auto_update_statusmon_provider }}"

# Uptime Kuma URL and login credentials (Socket.IO API requires username/password)
STATUS_MONITOR_URL="{{ auto_update_statusmon_url }}"
STATUS_MONITOR_USERNAME="{{ auto_update_statusmon_username }}"
STATUS_MONITOR_PASSWORD="{{ auto_update_statusmon_password }}"

# Optional: override hostname for monitor discovery (default: FQDN)
# STATUS_MONITOR_HOSTNAME=""
